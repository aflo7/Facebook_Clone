<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Home</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

  <link rel="stylesheet" href="stylesheets/home.css">
  <link rel="stylesheet" href="stylesheets/style.css">


  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>

  <% if (locals.currentUser && locals.currentUser.settings.darkMode) { %>
    <link rel="stylesheet" href="../stylesheets/darkMode.css">

    <%} %>

</head>

<body>
  <div class="nav-wrapper">
    <%- include('./partials/nav.ejs'); %>
  </div>

  <div class="mainwrapper">
    <div class="maincontent">

      <%- include('./partials/add-post-modal.ejs'); %>
        <div class="maincontentbottom">
          <main id="main" class="post-wrapper">
            <div class="posts-title">Posts</div>
            <% if (locals.posts && locals.posts.length> 0) { %>
              <% for (var post of locals.posts) { %>
                <div class="individual-post-wrapper">
                 
                    <div class="individual-post-title">
                      <a href="/posts/<%= post._id %>">
                        <%= post.title %>
                      </a>
                    </div>
                    <div class="individual-post-content">
                      <%= post.content %>
                    </div>

                    <% if (post.imageUrl) { %>
                      <div>
                        <img class="post-img" src="<%= post.imageUrl %>" alt="img" />
                      </div>
                      <% } %>
                  <div class="individual-post-like-count">
                    <div>
                      <a href="/users/<%= post.posterId %>">
                        <span>
                          <%= post.posterName %>
                        </span>
                      </a>
                    </div>
                    <div>

                      <span>
                        <%= post.likes %> likes
                      </span>
                    </div>
                    <div>

                      <span>
                        <%= post.comments.length %> comments
                      </span>
                    </div>

                  </div>
                </div>
                <% } %>
                  <% } %>

                    <div class="add-post-wrapper">
                      <button type="button" data-toggle="modal" data-target="#createPostModal" class="add-post-btn">
                        + Add post
                      </button>
                    </div>
          </main>

          <%- include('./partials/news.ejs'); %>

        </div>


    </div>
  </div>
</body>

</html>