<div class="my-post">

  <div style="padding: 5px;">

    <div>
      <span style="color: rgb(73, 79, 255); font-weight: bold;">
        Title:
      </span>
      <%=post.title%>
    </div>

    <div>
      <span style="color: rgb(73, 79, 255); font-weight: bold;">
        Content:
      </span>
      <%=post.content%>
    </div>

    <% if (post.imageUrl) { %>
      <div>
        <span style="color: rgb(73, 79, 255); font-weight: bold;">
          Image URL:
        </span>
        <%=post.imageUrl%>
      </div>
      <% } %>

  </div>

  <div class="my-comments-wrapper">

    <% post.comments.forEach(comment=> { %>
      <div class="individual-comment">
        <span>
          <span style="color: rgb(73, 79, 255);">Author:</span>
          <%=comment.author%>
            <span style="color: rgb(73, 79, 255);">Content:</span>
            <%=comment.content%>
        </span>
        <form id="deleteCommentForm" method="post" action="/comment/delete">
          <input name="commentID" type="hidden" value="<%= comment._id %>" />
          <input style="padding-left: 5px; padding-right: 5px; cursor: pointer;" type="submit" value="Delete Comment" />
        </form>
      </div>
      <% }) %>
  </div>

  <form method="post" action="/posts/delete" id="deleteMyPostForm" style="padding: 5px;">
    <input type="hidden" name="postID" value="<%=post._id%>" />
    <input style="margin-right: 5px; padding-left: 5px; padding-right: 5px; cursor: pointer;" type="submit"
      value="Delete Post" />
  </form>
</div>